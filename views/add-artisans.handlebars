<h5>Register Artisans</h5>

<div class="col-sm-4 col-md-8" border="3px solid black">
  <form class="col-sm-4 col-md-8" action="/add-artisans/{{id}}" method="POST">
      <div class="form-group">
         <label for="name">Name :</label>
         <input type="text" class="form-control" id="name" name="name">
       </div>
       <div class="form-group">
         <label for="contacts">Contacts :</label>
         <input type="text" class="form-control" id="contacts" name="contacts">
       </div>
       <div class="form-group">
         <label for="address">Address :</label>
         <input type="text" class="form-control" id="address" name="address">
       </div>
       <div class="form-group">
         <label for="type">Type :</label>
         <input type="text" class="form-control" id="type" name="type">
       </div>
       <button type="submit" class="button-group">Submit</button>
  </form>
 </div>
